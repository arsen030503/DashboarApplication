<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="LiveChartsDashboard.MainWindow"
        Title="Weather Dashboard">
    <StackPanel Margin="10">

        <!-- Заголовок приложения -->
        <TextBlock Text="Weather Dashboard" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" />

        <!-- Поле для ввода города -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBox x:Name="CityInput" Width="200" Watermark="Enter city name..." />
            <Button Content="Get Weather" Margin="10,0,0,0" Click="GetWeatherButton_Click" />
        </StackPanel>

        <!-- Данные о погоде -->
        <TextBlock x:Name="CityName" Text="City: " FontSize="16" />
        <TextBlock x:Name="Temperature" Text="Temperature: " FontSize="16" />
        <TextBlock x:Name="Pressure" Text="Pressure: " FontSize="16" />
        <TextBlock x:Name="Humidity" Text="Humidity: " FontSize="16" />

    </StackPanel>
</Window>